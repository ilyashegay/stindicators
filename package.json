{
	"name": "stindicators",
	"version": "0.0.1",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.cjs"
	},
	"types": "src/typings.d.ts",
	"license": "MIT",
	"repository": "https://github.com/ilyashegay/stindicators",
	"scripts": {
		"build": "npm run build:mjs && npm run build:cjs",
		"build:mjs": "esbuild src/index.ts --bundle --format=esm --external:decimal.js --target=node14 --outfile=dist/index.mjs",
		"build:cjs": "esbuild src/index.ts --bundle --format=cjs --external:decimal.js --target=node14 --outfile=dist/index.cjs",
		"types": "tsc --declaration --emitDeclarationOnly --project tsconfig.json",
		"lint": "npm run tsc && npm run eslint",
		"tsc": "tsc --noEmit --skipLibCheck --project tsconfig.json",
		"eslint": "eslint --ext js,ts src test",
		"test": "uvu -r esbuild-register test test"
	},
	"dependencies": {
		"decimal.js": "^10.3.1"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"esbuild": "^0.13.15",
		"esbuild-register": "^3.1.2",
		"eslint": "^8.3.0",
		"eslint-config-prettier": "^8.3.0",
		"typescript": "^4.5.2",
		"uvu": "^0.5.2"
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "all"
	},
	"eslintConfig": {
		"parserOptions": {
			"project": "./tsconfig.json"
		},
		"env": {
			"es2020": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking",
			"prettier"
		]
	}
}
